<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boneix.dks.domain.InitInfo">
    <resultMap type="com.boneix.dks.domain.InitInfo" id="InitInfo">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="currentValue" column="current_value" jdbcType="INTEGER"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="base_Column_List">
		id,
		current_value,
		delete_flag,
		create_time
	</sql>


    <select id="queryCurrentValue" parameterType="Integer" resultType="Long">
		select
		current_value
		from
		init_info where sys_id = #{sysId}
	</select>

    <select id="querySystemCount" parameterType="Integer" resultType="Long">
        select
        COUNT(1)
        from
        init_info where sys_id = #{sysId}
    </select>

    <update id="updateCurrentValue" parameterType="java.util.Map">
        UPDATE
        init_info
        <set>
            <if test="newValue != null">
                current_value = #{newValue}
            </if>
        </set>
        <where>
            <trim prefixOverrides="and">
                and sys_id = #{sysId}
                AND delete_flag=0
            </trim>
        </where>
    </update>

    <update id="deleteById" parameterType="Integer">
        UPDATE
        init_info
        <set>
            delete_flag = 1
        </set>
        <where>
            <trim prefixOverrides="and">
                and sys_id = #{sysId}
            </trim>
        </where>
    </update>

    <insert id="insert" parameterMap="InitInfo" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO init_info
        <trim prefix="(" suffix=")" prefixOverrides=",">
            sys_id,
            <if test="sysName != null">
                sys_name,
            </if>
            <if test="currentValue != null">
                current_value,
            </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" prefixOverrides=",">
            #{sysId},
            <if test="sysName != null">
                #{sysName},
            </if>
            <if test="currentValue != null">
                #{newValue},
            </if>
        </trim>
    </insert>
</mapper>